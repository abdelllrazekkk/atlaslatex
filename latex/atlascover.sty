\newcommand{\AC@PrintAtlasCover}{
  \bgroup\global\setbox255\vbox{%
    \vspace*{\AC@voffset}%
    \noindent\hspace*{\AC@hoffset}%
    \rlap{\begin{minipage}[t][\textheight][c]{\textwidth}%
      	{\AtlasCoverHeader}%
        \vfill%
        {\AtlasCoverBody}%
        \vfill%
        {\AtlasCoverFooter}%
      \end{minipage}}%
  }
  \egroup\shipout\box255
}

\newcommand{\AC@PrintAtlasPage}{
  \bgroup\global\setbox255\vbox{%
    \vspace*{\AC@voffset}%
    \noindent\hspace*{\AC@hoffset}%
    \rlap{\begin{minipage}[t][\textheight][c]{\textwidth}%
    {\AtlasCoverPageTwo}%
        \vfill%
     \end{minipage}}%
  }
  \egroup\shipout\box255

  % additional empty page
  \ifAC@clearpage 
    \bgroup\global\setbox255\vbox{}
